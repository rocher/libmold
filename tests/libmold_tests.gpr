with "config/libmold_tests_config.gpr";
project Libmold_Tests is

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Libmold_Tests_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("mold_tests.adb");

   package Compiler is
      for Default_Switches ("Ada") use
      Libmold_Tests_Config.Ada_Compiler_Switches &
         (
              "-gnatW8"   --  Wide character encoding method
            , "-gnat2022" --  Ada 2022 mode
            , "-gnatX"    --  Language extensions permitted
            , "-gnatwU"   --  turn off warnings for unused entity
         );
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Libmold_Tests;
